# Core application
APP_NAME=Unified Warehouse Service
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
TZ=Europe/Minsk

# Runtime profiles
# APP_RUNTIME toggles process manager behavior (local -> uvicorn, production -> gunicorn)
APP_RUNTIME=local
# Explicit worker counts document the defaults and can be overridden per deployment
UVICORN_WORKERS=2
GUNICORN_WORKERS=6

# Local data storage
LOCAL_DATA_ROOT=/home/izbushko/stock_warehouse_data

# Database
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=warehouse
POSTGRES_USER=warehouse
POSTGRES_PASSWORD=warehouse
DATABASE_URL=postgresql+psycopg://warehouse:warehouse@db:5432/warehouse

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_DB_SCHEDULER_URL=postgresql+psycopg://warehouse:warehouse@db:5432/warehouse

# Telegram notifications
TELEGRAM_BOT_TOKEN=replace-me
TELEGRAM_CRITICAL_CHAT_ID=0
TELEGRAM_HEALTH_CHAT_ID=0

# Security
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=change-me

# Misc
SENTRY_DSN=
