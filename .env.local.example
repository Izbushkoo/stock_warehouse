# Local Development Environment Configuration  
# Скопируйте этот файл в .env и заполните значениями

# Application
APP_NAME=Stock Warehouse Dev
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=DEBUG
TZ=Europe/Minsk

# Database (для локальной разработки через Docker)
LOCAL_DATA_ROOT=./local_data
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
POSTGRES_HOST=localhost
POSTGRES_PORT_TO_LOCAL_HOST=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis (для локальной разработки)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CALERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_DB_SCHEDULER_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Telegram Notifications (заглушки для разработки)
TELEGRAM_BOT_TOKEN=dev-token
TELEGRAM_CRITICAL_CHAT_ID=-1
TELEGRAM_HEALTH_CHAT_ID=-1

# Super Admin (для локальной разработки)
SUPERADMIN_EMAIL=admin@dev.local
SUPERADMIN_PASSWORD=admin123

# Security (слабый секрет для разработки)
JWT_SECRET=dev-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Uvicorn workers
UVICORN_WORKERS=1

# Frontend development
VITE_DEV_SERVER_PORT=5173
