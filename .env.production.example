# Production Environment Configuration
# Скопируйте этот файл в .env.production и заполните реальными значениями

# Application
APP_NAME=Stock Warehouse
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
TZ=Europe/Minsk

# Frontend URL для CORS
FRONTEND_URL=stock.yarganix.com

# Database
DATABASE_URL=postgresql://user:password@db:5432/warehouse
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=warehouse
POSTGRES_USER=warehouse_user
POSTGRES_PASSWORD=your_strong_password

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_DB_SCHEDULER_URL=postgresql://user:password@db:5432/celery_scheduler

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CRITICAL_CHAT_ID=-123456789
TELEGRAM_HEALTH_CHAT_ID=-987654321

# Super Admin
SUPERADMIN_EMAIL=admin@yarganix.com
SUPERADMIN_PASSWORD=your_very_strong_admin_password

# Security
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_for_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Optional: Sentry for error monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Frontend API URL (для билда статики)
FRONTEND_API_BASE_URL=https://stock.yarganix.com/api
VITE_PREVIEW_PORT=4173
FRONTEND_PORT=80
